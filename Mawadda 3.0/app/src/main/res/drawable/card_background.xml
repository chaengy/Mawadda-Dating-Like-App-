<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CDD1D0"/> <!-- Background color -->
            <corners android:radius="16dp"/> <!-- Corner radius -->
            <padding android:left="4dp" android:top="4dp"
                android:right="4dp" android:bottom="4dp"/> <!-- Padding for shadow -->
        </shape>
    </item>
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffff"/> <!-- Shadow color -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>
